                "data-source": [
                  {
                    "id": "lose_weight",
                    "title": "Lose weight"
                  },
                  {
                    "id": "build_muscle",
                    "title": "Build muscle"
                  },
                  {
                    "id": "get_stronger",
                    "title": "Get stronger"
                  },
                  {
                    "id": "improve_fitness",
                    "title": "Improve fitness"
                  },
                  {
                    "id": "train_for_event",
                    "title": "Train for event"
                  },
                  {
                    "id": "general_health",
                    "title": "General health"
                  }
                ]
              },
              {
                "type": "TextArea",
                "name": "specific_goals",
                "label": "Any specific goals?",
                "helper-text": "E.g., Run 5km, lose 10kg, etc.",
                "required": false
              },
              {
                "type": "Footer",
                "label": "Continue",
