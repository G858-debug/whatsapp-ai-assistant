{
  "version": "5.0",
  "screens": [
    {
      "id": "welcome",
      "title": "Welcome!",
      "terminal": false,
      "data": {
        "flow_token": {
          "type": "string",
          "__example__": "client_onboarding_invitation_uuid_phone_timestamp"
        },
        "trainer_name": {
          "type": "string",
          "__example__": "John Smith"
        },
        "selected_price": {
          "type": "string",
          "__example__": "500"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Let's get you started! üí™"
          },
          {
            "type": "TextBody",
            "text": "Your trainer needs some information to create the perfect fitness program for you."
          },
          {
            "type": "TextBody",
            "text": "This will only take 2-3 minutes."
          },
          {
            "type": "EmbeddedLink",
            "text": "If you have any concerns about data privacy, tap here",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "privacy_info"
              },
              "payload": {
                "flow_token": "${data.flow_token}",
                "trainer_name": "${data.trainer_name}",
                "selected_price": "${data.selected_price}"
              }
            }
          },
          {
            "type": "Footer",
            "label": "Start",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "fitness_goals"
              },
              "payload": {
                "flow_token": "${data.flow_token}",
                "trainer_name": "${data.trainer_name}",
                "selected_price": "${data.selected_price}"
              }
            }
          }
        ]
      }
    },
