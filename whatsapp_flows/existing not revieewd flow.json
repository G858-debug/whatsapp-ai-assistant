{
  "routing_model": {
    "welcome": ["basic_info"],
    "basic_info": ["business_details"],
    "business_details": ["terms_agreement"],
    "terms_agreement": ["registration_complete"],
    "registration_complete": []
  },
  "data_api_version": "3.0",
  "version": "7.3",
  "screens": [
    {
      "id": "welcome",
      "title": "Welcome on board!",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "My name is Refiloe, I'm your AI-powered personal assistant! Let's get you set up as a trainer in just a few steps."
          },
          {
            "type": "Image",
            "src": "https://refiloeradebe.co.za/wp-content/uploads/2025/09/GPT_Image_1_also_two_small_dumbells_in_the_background_against_0-683x1024.png"
          },
          {
            "type": "Footer",
            "label": "This will take about 2 minutes",
            "on-click-action": {
              "name": "navigate",
              "next": { "type": "screen", "name": "basic_info" }
            }
          }
        ]
      }
    },
    {
      "id": "basic_info",
      "title": "Basic Information",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "First, let's get your basic information"
          },
          {
            "type": "Form",
            "name": "basic_info_form",
            "children": [
              {
                "type": "TextInput",
                "name": "first_name",
                "label": "Name",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "surname",
                "label": "Surname",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "email",
                "label": "Email Address",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "city",
                "label": "City / Location",
                "required": true
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "navigate",
                  "next": { "type": "screen", "name": "business_details" }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "business_details",
      "title": "Business Details",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Tell us about your training business"
          },
          {
            "type": "Form",
            "name": "business_form",
            "children": [
              {
                "type": "TextInput",
                "name": "business_name",
                "label": "Business Name",
                "required": false
              },
              {
                "type": "CheckboxGroup",
                "name": "specializations",
                "label": "Training Specializations (select all that apply)",
                "required": true,
                "data-source": [
                  { "id": "personal_training", "title": "Personal Training" },
                  { "id": "group_fitness", "title": "Group Fitness" },
                  { "id": "strength_training", "title": "Strength Training" },
                  { "id": "cardio_fitness", "title": "Cardio Fitness" },
                  { "id": "yoga_pilates", "title": "Yoga & Pilates" },
                  { "id": "sports_coaching", "title": "Sports Coaching" },
                  { "id": "nutrition_coaching", "title": "Nutrition Coaching" },
                  { "id": "general_fitness", "title": "General Fitness" }
                ]
              },
              {
                "type": "Dropdown",
                "name": "experience_years",
                "label": "Years of Experience",
                "required": true,
                "data-source": [
                  { "id": "0-1", "title": "0-1 years" },
                  { "id": "2-3", "title": "2-3 years" },
                  { "id": "4-5", "title": "4-5 years" },
                  { "id": "6-10", "title": "6-10 years" },
                  { "id": "10+", "title": "10+ years" }
                ]
              },
              {
                "type": "TextInput",
                "name": "pricing_per_session",
                "label": "Average price per session",
                "required": true
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "navigate",
                  "next": { "type": "screen", "name": "terms_agreement" }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "terms_agreement",
      "title": "Terms & Conditions",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Please agree to our terms to complete your registration."
          },
          {
            "type": "Form",
            "name": "terms_form",
            "children": [
              {
                "type": "TextBody",
                "text": "View our Terms of Service:\nhttps://refiloe.ai/terms\n\nView our Privacy Policy:\nhttps://refiloe.ai/privacy"
              },
              {
                "type": "OptIn",
                "name": "terms_accepted",
                "label": "I have read and agree to the Terms of Service and Privacy Policy",
                "required": true
              },
              {
                "type": "TextArea",
                "name": "additional_notes",
                "label": "Additional Notes ",
                "required": false
              },
              {
                "type": "Footer",
                "label": "Complete Registration",
                "on-click-action": {
                  "name": "navigate",
                  "next": { "type": "screen", "name": "registration_complete" }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "registration_complete",
      "title": "Congratulations!!",
      "terminal": true,
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Your trainer profile has been created successfully. We'll send you a link to set up your availability schedule."
          },
          {
            "type": "Image",
            "src": "https://refiloeradebe.co.za/wp-content/uploads/2025/09/gemini-2.5-flash-image-preview_A_cinematic_portrait_photograph_of_Give_me_more_variations_of_her_face_and_smile._I_want_her_to_loo-3-683x1024.png"
          },
          {
            "type": "Footer",
            "label": "Close",
            "on-click-action": {
              "name": "complete",
              "payload": { "success": true }
            }
          }
        ]
      }
    }
  ]
}
