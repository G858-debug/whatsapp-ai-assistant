{
  "version": "4.0",
  "screens": [
    {
      "id": "welcome",
      "title": "üìù Daily Check-in",
      "data": {},
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Log Today's Habits"
          },
          {
            "type": "TextBody",
            "text": "Time for your daily habit check-in! Let's track your progress and keep those streaks going! üî•"
          },
          {
            "type": "Footer",
            "label": "Start Logging",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "quick_log"
              }
            }
          }
        ]
      }
    },
    {
      "id": "quick_log",
      "title": "‚ö° Quick Log",
      "data": {
        "active_habits": []
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Today's Habits"
          },
          {
            "type": "TextBody",
            "text": "Mark off the habits you've completed today. Only your setup habits are shown:"
          },
          {
            "type": "CheckboxGroup",
            "name": "completed_habits",
            "data-source": "active_habits",
            "required": false
          },
          {
            "type": "Footer",
            "label": "Add Details",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "detailed_entry"
              }
            }
          }
        ]
      }
    },
    {
      "id": "detailed_entry",
      "title": "üìä Add Details",
      "data": {},
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Add Specific Values"
          },
          {
            "type": "TextBody",
            "text": "Add specific values for measurable habits:"
          },
          {
            "type": "TextInput",
            "name": "water_amount",
            "label": "üíß Water (liters)",
            "input-type": "number",
            "helper-text": "How much water did you drink?",
            "required": false
          },
          {
            "type": "TextInput",
            "name": "sleep_hours",
            "label": "üò¥ Sleep (hours)",
            "input-type": "number",
            "helper-text": "How many hours did you sleep?",
            "required": false
          },
          {
            "type": "TextInput",
            "name": "steps_count",
            "label": "üö∂ Steps",
            "input-type": "number",
            "helper-text": "How many steps did you take?",
            "required": false
          },
          {
            "type": "Footer",
            "label": "Complete Logging",
            "on-click-action": {
              "name": "complete",
              "payload": {
                "action": "log_habits",
                "completed_habits": "${form.completed_habits}",
                "water_amount": "${form.water_amount}",
                "sleep_hours": "${form.sleep_hours}",
                "steps_count": "${form.steps_count}"
              }
            }
          }
        ]
      }
    }
  ]
}
