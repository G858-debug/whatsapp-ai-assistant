{
  "version": "6.0",
  "data_api_version": "3.0",
  "routing_model": {
    "WELCOME": ["PERSONAL_INFO"],
    "PERSONAL_INFO": ["FITNESS_GOALS"],
    "FITNESS_GOALS": ["EXPERIENCE_LEVEL"],
    "EXPERIENCE_LEVEL": ["HEALTH_INFO"],
    "HEALTH_INFO": ["AVAILABILITY"]
  },
  "screens": [
    {
      "id": "WELCOME",
      "title": "Welcome!",
      "terminal": false,
      "data": {
        "trainer_name": {
          "type": "string",
          "__example__": "Coach Sarah"
        },
        "price_per_session": {
          "type": "string",
          "__example__": "R500"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Welcome to your fitness journey! üéØ"
          },
          {
            "type": "TextBody",
            "text": "Hi there! üëã\n\n${data.trainer_name} has invited you to start training together. Let's complete your fitness profile so they can create the perfect program for you!\n\nThis will only take 2 minutes."
          },
          {
            "type": "TextBody",
            "text": "üí∞ Price per session: ${data.price_per_session}"
          },
          {
            "type": "Footer",
            "label": "Get started",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "PERSONAL_INFO"
              },
              "payload": {
                "trainer_name": "${data.trainer_name}",
                "price_per_session": "${data.price_per_session}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "PERSONAL_INFO",
      "title": "Personal information",
      "terminal": false,
      "data": {
        "trainer_name": {
          "type": "string",
          "__example__": "Coach Sarah"
        },
        "price_per_session": {
          "type": "string",
          "__example__": "R500"
        },
        "prefilled_name": {
          "type": "string",
          "__example__": ""
        },
        "prefilled_email": {
          "type": "string",
          "__example__": ""
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "personal_info_form",
            "init-values": {
              "full_name": "${data.prefilled_name}",
              "email": "${data.prefilled_email}"
            },
            "children": [
              {
                "type": "TextHeading",
                "text": "Tell me about yourself üë§"
              },
              {
                "type": "TextBody",
                "text": "Let's start with some basic information:"
              },
              {
                "type": "TextInput",
                "name": "full_name",
                "label": "Full name *",
                "input-type": "text",
                "required": true,
                "helper-text": "Enter your full name"
              },
              {
                "type": "TextInput",
                "name": "email",
                "label": "Email address",
                "input-type": "email",
                "required": false,
                "helper-text": "Optional - helps with better communication"
              },
              {
                "type": "Footer",
                "label": "Next",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "FITNESS_GOALS"
                  },
                  "payload": {
                    "trainer_name": "${data.trainer_name}",
                    "price_per_session": "${data.price_per_session}",
                    "full_name": "${form.full_name}",
                    "email": "${form.email}"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "FITNESS_GOALS",
      "title": "Fitness goals",
      "terminal": false,
      "data": {
        "trainer_name": {
          "type": "string",
          "__example__": "Coach Sarah"
        },
        "price_per_session": {
          "type": "string",
          "__example__": "R500"
        },
        "full_name": {
          "type": "string",
          "__example__": ""
        },
        "email": {
          "type": "string",
          "__example__": ""
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "fitness_goals_form",
            "children": [
              {
                "type": "TextHeading",
                "text": "What are your goals? üéØ"
              },
              {
                "type": "TextBody",
                "text": "Select your main fitness objectives (you can choose multiple):"
              },
              {
                "type": "CheckboxGroup",
                "name": "fitness_goals",
                "label": "Your fitness goals",
                "required": true,
                "data-source": [
                  {
                    "id": "lose_weight",
                    "title": "Lose weight",
                    "description": "Reduce body weight and improve body composition"
                  },
                  {
                    "id": "build_muscle",
                    "title": "Build muscle",
                    "description": "Increase muscle mass and strength"
                  },
                  {
                    "id": "get_stronger",
                    "title": "Get stronger",
                    "description": "Improve overall strength and power"
                  },
                  {
                    "id": "improve_fitness",
                    "title": "Improve fitness",
                    "description": "Enhance cardiovascular health and endurance"
                  },
                  {
                    "id": "train_for_event",
                    "title": "Train for event",
                    "description": "Prepare for specific sports or competitions"
                  }
                ]
              },
              {
                "type": "Footer",
                "label": "Next",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "EXPERIENCE_LEVEL"
                  },
                  "payload": {
                    "trainer_name": "${data.trainer_name}",
                    "price_per_session": "${data.price_per_session}",
                    "full_name": "${data.full_name}",
                    "email": "${data.email}",
                    "fitness_goals": "${form.fitness_goals}"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "EXPERIENCE_LEVEL",
      "title": "Experience level",
      "terminal": false,
      "data": {
        "trainer_name": {
          "type": "string",
          "__example__": "Coach Sarah"
        },
        "price_per_session": {
          "type": "string",
          "__example__": "R500"
        },
        "full_name": {
          "type": "string",
          "__example__": ""
        },
        "email": {
          "type": "string",
          "__example__": ""
        },
        "fitness_goals": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "__example__": []
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "experience_form",
            "children": [
              {
                "type": "TextHeading",
                "text": "Your fitness experience üìä"
              },
              {
                "type": "TextBody",
                "text": "What's your current fitness level?"
              },
              {
                "type": "RadioButtonsGroup",
                "name": "experience_level",
                "label": "Experience level",
                "required": true,
                "data-source": [
                  {
                    "id": "beginner",
                    "title": "Beginner",
                    "description": "New to exercise or getting back into it"
                  },
                  {
                    "id": "intermediate",
                    "title": "Intermediate",
                    "description": "Exercise sometimes, have some experience"
                  },
                  {
                    "id": "advanced",
                    "title": "Advanced",
                    "description": "Exercise regularly, good fitness base"
                  },
                  {
                    "id": "athlete",
                    "title": "Athlete",
                    "description": "Competitive sports or very experienced"
                  }
                ]
              },
              {
                "type": "Footer",
                "label": "Next",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "HEALTH_INFO"
                  },
                  "payload": {
                    "trainer_name": "${data.trainer_name}",
                    "price_per_session": "${data.price_per_session}",
                    "full_name": "${data.full_name}",
                    "email": "${data.email}",
                    "fitness_goals": "${data.fitness_goals}",
                    "experience_level": "${form.experience_level}"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "HEALTH_INFO",
      "title": "Health information",
      "terminal": false,
      "data": {
        "trainer_name": {
          "type": "string",
          "__example__": "Coach Sarah"
        },
        "price_per_session": {
          "type": "string",
          "__example__": "R500"
        },
        "full_name": {
          "type": "string",
          "__example__": ""
        },
        "email": {
          "type": "string",
          "__example__": ""
        },
        "fitness_goals": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "__example__": []
        },
        "experience_level": {
          "type": "string",
          "__example__": ""
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "health_form",
            "children": [
              {
                "type": "TextHeading",
                "text": "Health & safety üè•"
              },
              {
                "type": "TextBody",
                "text": "Help us keep you safe during training:"
              },
              {
                "type": "TextArea",
                "name": "health_conditions",
                "label": "Health conditions",
                "required": false,
                "helper-text": "List any health conditions, injuries, or concerns. Type 'none' if you're all good."
              },
              {
                "type": "Footer",
                "label": "Next",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "AVAILABILITY"
                  },
                  "payload": {
                    "trainer_name": "${data.trainer_name}",
                    "price_per_session": "${data.price_per_session}",
                    "full_name": "${data.full_name}",
                    "email": "${data.email}",
                    "fitness_goals": "${data.fitness_goals}",
                    "experience_level": "${data.experience_level}",
                    "health_conditions": "${form.health_conditions}"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "AVAILABILITY",
      "title": "Training availability",
      "terminal": true,
      "data": {
        "trainer_name": {
          "type": "string",
          "__example__": "Coach Sarah"
        },
        "price_per_session": {
          "type": "string",
          "__example__": "R500"
        },
        "full_name": {
          "type": "string",
          "__example__": ""
        },
        "email": {
          "type": "string",
          "__example__": ""
        },
        "fitness_goals": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "__example__": []
        },
        "experience_level": {
          "type": "string",
          "__example__": ""
        },
        "health_conditions": {
          "type": "string",
          "__example__": ""
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "availability_form",
            "children": [
              {
                "type": "TextHeading",
                "text": "When can you train? ‚è∞"
              },
              {
                "type": "TextBody",
                "text": "Select your preferred training times (you can choose multiple):"
              },
              {
                "type": "CheckboxGroup",
                "name": "availability",
                "label": "Preferred times",
                "required": true,
                "data-source": [
                  {
                    "id": "early_morning",
                    "title": "Early morning",
                    "description": "5:00 AM - 8:00 AM"
                  },
                  {
                    "id": "morning",
                    "title": "Morning",
                    "description": "8:00 AM - 12:00 PM"
                  },
                  {
                    "id": "afternoon",
                    "title": "Afternoon",
                    "description": "12:00 PM - 5:00 PM"
                  },
                  {
                    "id": "evening",
                    "title": "Evening",
                    "description": "5:00 PM - 8:00 PM"
                  },
                  {
                    "id": "flexible",
                    "title": "Flexible",
                    "description": "I can adapt to trainer's schedule"
                  }
                ]
              },
              {
                "type": "TextBody",
                "text": "üéâ Almost done! Click below to complete your onboarding and start training with ${data.trainer_name}."
              },
              {
                "type": "Footer",
                "label": "Complete onboarding",
                "on-click-action": {
                  "name": "complete",
                  "payload": {
                    "full_name": "${data.full_name}",
                    "email": "${data.email}",
                    "fitness_goals": "${data.fitness_goals}",
                    "experience_level": "${data.experience_level}",
                    "health_conditions": "${data.health_conditions}",
                    "availability": "${form.availability}"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
