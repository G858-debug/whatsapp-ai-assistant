{
  "version": "7.3",
  "data_api_version": "3.0",
  "routing_model": {
    "welcome": ["basic_info"],
    "basic_info": ["preferences"],
    "preferences": ["confirmation"],
    "confirmation": []
  },
  "screens": [
    {
      "id": "welcome",
      "title": "Edit Your Profile ‚úèÔ∏è",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Let's update your client profile! üìù\n\nNote: Current values are not pre-filled. Only update the fields you want to change. Leave fields blank to keep current values."
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "basic_info"
              }
            }
          }
        ]
      }
    },
    {
      "id": "basic_info",
      "title": "Basic Information",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Update your basic information (leave blank to keep current values) üìù"
          },
          {
            "type": "Form",
            "name": "basic_info_form",
            "children": [
              {
                "type": "TextInput",
                "name": "name",
                "label": "Full Name (optional)",
                "required": false
              },
              {
                "type": "TextInput",
                "name": "email",
                "label": "Email Address",
                "required": false
              },
              {
                "type": "TextArea",
                "name": "fitness_goals",
                "label": "Fitness Goals",
                "required": false
              },
              {
                "type": "TextArea",
                "name": "availability",
                "label": "Availability",
                "required": false
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "preferences"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "preferences",
      "title": "Preferences",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Update your preferences (optional) üéØ"
          },
          {
            "type": "Form",
            "name": "preferences_form",
            "children": [
              {
                "type": "CheckboxGroup",
                "name": "notification_preferences",
                "label": "Notifications",
                "required": false,
                "data-source": [
                  {
                    "id": "whatsapp",
                    "title": "WhatsApp Messages"
                  },
                  {
                    "id": "email",
                    "title": "Email Notifications"
                  },
                  {
                    "id": "sms",
                    "title": "SMS Messages"
                  }
                ]
              },
              {
                "type": "OptIn",
                "name": "marketing_consent",
                "label": "Marketing emails",
                "required": false
              },
              {
                "type": "Footer",
                "label": "Update Profile",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "confirmation"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "confirmation",
      "title": "Profile Updated! ‚úÖ",
      "terminal": true,
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Your client profile has been successfully updated! üéâ\n\nOnly the fields you changed have been updated. Your existing information remains unchanged."
          },
          {
            "type": "Image",
            "src": "https://refiloeradebe.co.za/wp-content/uploads/2025/09/gemini-2.5-flash-image-preview_A_cinematic_portrait_photograph_of_Give_me_more_variations_of_her_face_and_smile._I_want_her_to_loo-3-683x1024.png"
          },
          {
            "type": "Footer",
            "label": "Close",
            "on-click-action": {
              "name": "complete",
              "payload": {
                "success": true
              }
            }
          }
        ]
      }
    }
  ]
}
