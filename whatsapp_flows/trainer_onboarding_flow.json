{
  "version": "7.3",
  "data_api_version": "3.0",
  "routing_model": {
    "welcome": ["basic_info"],
    "basic_info": ["business_details"],
    "business_details": ["availability"],
    "availability": ["preferences"],
    "preferences": ["business_setup"],
    "business_setup": ["pricing_smart"],
    "pricing_smart": ["terms_agreement"],
    "terms_agreement": ["registration_complete"],
    "registration_complete": []
  },
  "screens": [
    {
      "id": "welcome",
      "title": "Welcome to Refiloe! üéâ",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "My name is Refiloe, I'm your AI-powered personal assistant! Let's get you set up as a trainer in just a few steps. üí™"
          },
          {
            "type": "Image",
            "src": "https://refiloeradebe.co.za/wp-content/uploads/2025/09/GPT_Image_1_also_two_small_dumbells_in_the_background_against_0-683x1024.png"
          },
          {
            "type": "Footer",
            "label": "This will take about 2 minutes ‚è±Ô∏è",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "basic_info"
              }
            }
          }
        ]
      }
    },
    {
      "id": "basic_info",
      "title": "Basic Information",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "First, let's get your basic information üìù"
          },
          {
            "type": "Form",
            "name": "basic_info_form",
            "children": [
              {
                "type": "TextInput",
                "name": "first_name",
                "label": "First Name",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "surname",
                "label": "Surname",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "email",
                "label": "Email Address",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "city",
                "label": "City / Location",
                "required": true
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "business_details"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "business_details",
      "title": "Business Details",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Tell us about your training business üíº"
          },
          {
            "type": "Form",
            "name": "business_form",
            "children": [
              {
                "type": "TextInput",
                "name": "business_name",
                "label": "Business Name",
                "required": false
              },
              {
                "type": "CheckboxGroup",
                "name": "specializations",
                "label": "Specializations",
                "required": true,
                "data-source": [
                  {
                    "id": "personal_training",
                    "title": "Personal Training"
                  },
                  {
                    "id": "group_fitness",
                    "title": "Group Fitness"
                  },
                  {
                    "id": "strength_training",
                    "title": "Strength Training"
                  },
                  {
                    "id": "cardio_fitness",
                    "title": "Cardio Fitness"
                  },
                  {
                    "id": "yoga_pilates",
                    "title": "Yoga & Pilates"
                  },
                  {
                    "id": "sports_coaching",
                    "title": "Sports Coaching"
                  },
                  {
                    "id": "nutrition_coaching",
                    "title": "Nutrition Coaching"
                  },
                  {
                    "id": "rehabilitation",
                    "title": "Rehabilitation & Recovery"
                  },
                  {
                    "id": "general_fitness",
                    "title": "General Fitness"
                  }
                ]
              },
              {
                "type": "Dropdown",
                "name": "experience_years",
                "label": "Years of Experience",
                "required": true,
                "data-source": [
                  {
                    "id": "0-1",
                    "title": "0-1 years"
                  },
                  {
                    "id": "2-3",
                    "title": "2-3 years"
                  },
                  {
                    "id": "4-5",
                    "title": "4-5 years"
                  },
                  {
                    "id": "6-10",
                    "title": "6-10 years"
                  },
                  {
                    "id": "10+",
                    "title": "10+ years"
                  }
                ]
              },
              {
                "type": "TextInput",
                "name": "pricing_per_session",
                "label": "Price per session",
                "required": true
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "availability"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "availability",
      "title": "Availability",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "When are you available for training sessions? üìÖ"
          },
          {
            "type": "Form",
            "name": "availability_form",
            "children": [
              {
                "type": "CheckboxGroup",
                "name": "available_days",
                "label": "Available Days",
                "required": true,
                "data-source": [
                  {
                    "id": "monday",
                    "title": "Monday"
                  },
                  {
                    "id": "tuesday",
                    "title": "Tuesday"
                  },
                  {
                    "id": "wednesday",
                    "title": "Wednesday"
                  },
                  {
                    "id": "thursday",
                    "title": "Thursday"
                  },
                  {
                    "id": "friday",
                    "title": "Friday"
                  },
                  {
                    "id": "saturday",
                    "title": "Saturday"
                  },
                  {
                    "id": "sunday",
                    "title": "Sunday"
                  }
                ]
              },
              {
                "type": "Dropdown",
                "name": "preferred_time_slots",
                "label": "Preferred Time Slots",
                "required": true,
                "data-source": [
                  {
                    "id": "early_morning",
                    "title": "Early Morning (5:00-8:00)"
                  },
                  {
                    "id": "morning",
                    "title": "Morning (8:00-12:00)"
                  },
                  {
                    "id": "afternoon",
                    "title": "Afternoon (12:00-17:00)"
                  },
                  {
                    "id": "evening",
                    "title": "Evening (17:00-20:00)"
                  },
                  {
                    "id": "flexible",
                    "title": "Flexible - Any Time"
                  }
                ]
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "preferences"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "preferences",
      "title": "Subscription Plan",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Choose your subscription plan üéØ"
          },
          {
            "type": "Form",
            "name": "preferences_form",
            "children": [
              {
                "type": "Dropdown",
                "name": "subscription_plan",
                "label": "Choose Your Plan",
                "required": true,
                "data-source": [
                  {
                    "id": "free",
                    "title": "Free Plan - Up to 5 clients"
                  },
                  {
                    "id": "premium",
                    "title": "Premium Plan - Up to 25 clients"
                  },
                  {
                    "id": "pro",
                    "title": "Pro Plan - Unlimited clients"
                  }
                ]
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "data_exchange",
                  "payload": {
                    "subscription_plan": "${form.subscription_plan}"
                  },
                  "next": {
                    "name": "navigate",
                    "next": {
                      "type": "screen",
                      "name": "business_setup"
                    }
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "business_setup",
      "title": "Additional Services",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "What additional services do you offer? üè¢"
          },
          {
            "type": "Form",
            "name": "business_setup_form",
            "children": [
              {
                "type": "CheckboxGroup",
                "name": "services_offered",
                "label": "Services Offered",
                "required": false,
                "data-source": [
                  {
                    "id": "in_person_training",
                    "title": "In-Person Training"
                  },
                  {
                    "id": "online_training",
                    "title": "Online Training"
                  },
                  {
                    "id": "nutrition_planning",
                    "title": "Nutrition Planning"
                  },
                  {
                    "id": "fitness_assessments",
                    "title": "Fitness Assessments"
                  },
                  {
                    "id": "group_classes",
                    "title": "Group Classes"
                  }
                ]
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "data_exchange",
                  "payload": {
                    "services_offered": "${form.services_offered}"
                  },
                  "next": {
                    "name": "navigate",
                    "next": {
                      "type": "screen",
                      "name": "pricing_smart"
                    }
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "pricing_smart",
      "title": "Pricing Options",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Set up your pricing options üí∞"
          },
          {
            "type": "Form",
            "name": "pricing_form",
            "children": [
              {
                "type": "CheckboxGroup",
                "name": "pricing_flexibility",
                "label": "Pricing Options",
                "required": false,
                "data-source": [
                  {
                    "id": "package_discounts",
                    "title": "Package Discounts"
                  },
                  {
                    "id": "student_discounts",
                    "title": "Student Discounts"
                  },
                  {
                    "id": "group_rates",
                    "title": "Group Session Rates"
                  }
                ]
              },
              {
                "type": "Footer",
                "label": "Continue",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "terms_agreement"
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "terms_agreement",
      "title": "Terms & Conditions",
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Please agree to our terms to complete your registration."
          },
          {
            "type": "Form",
            "name": "terms_form",
            "children": [
              {
                "type": "TextBody",
                "text": "View our Terms of Service:\nhttps://refiloe.ai/terms\n\nView our Privacy Policy:\nhttps://refiloe.ai/privacy"
              },
              {
                "type": "CheckboxGroup",
                "name": "notification_preferences",
                "label": "Notifications",
                "required": false,
                "data-source": [
                  {
                    "id": "whatsapp",
                    "title": "WhatsApp Messages"
                  },
                  {
                    "id": "email",
                    "title": "Email Notifications"
                  },
                  {
                    "id": "sms",
                    "title": "SMS Messages"
                  }
                ]
              },
              {
                "type": "OptIn",
                "name": "marketing_consent",
                "label": "Marketing emails",
                "required": false
              },
              {
                "type": "OptIn",
                "name": "terms_accepted",
                "label": "Accept Terms",
                "required": true
              },
              {
                "type": "TextArea",
                "name": "additional_notes",
                "label": "Additional Notes",
                "required": false
              },
              {
                "type": "Footer",
                "label": "Complete Registration",
                "on-click-action": {
                  "name": "data_exchange",
                  "payload": {
                    "terms_accepted": "${form.terms_accepted}"
                  },
                  "next": {
                    "name": "navigate",
                    "next": {
                      "type": "screen",
                      "name": "registration_complete"
                    }
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": "registration_complete",
      "title": "Congratulations!!",
      "terminal": true,
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextBody",
            "text": "Your trainer profile has been created successfully. We'll send you a link to set up your availability schedule."
          },
          {
            "type": "Image",
            "src": "https://refiloeradebe.co.za/wp-content/uploads/2025/09/gemini-2.5-flash-image-preview_A_cinematic_portrait_photograph_of_Give_me_more_variations_of_her_face_and_smile._I_want_her_to_loo-3-683x1024.png"
          },
          {
            "type": "Footer",
            "label": "Close",
            "on-click-action": {
              "name": "complete",
              "payload": {
                "success": true
              }
            }
          }
        ]
      }
    }
  ]
}
